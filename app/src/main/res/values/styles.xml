<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#F3F3F3</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">10dp</item>
        <item name="android:fontFamily">@font/notosanscjkr_regular</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ChattingScheduleDetail">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/notosanscjkr_regular</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">0.7</item>
    </style>
    
    <style name="CalendarSunToSat">
        <item name="alpha">0.29</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="TileDayItem">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#707070</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_up</item>
        <item name="android:windowExitAnimation">@anim/anim_down</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="colorControlNormal">@color/one</item>
    </style>
</resources>
