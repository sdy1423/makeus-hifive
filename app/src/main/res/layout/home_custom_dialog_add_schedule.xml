<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_add_schedule_border"
    android:orientation="vertical">


    <TextView
        android:id="@+id/home_custom_dialog_day"
        android:layout_width="312dp"
        android:layout_height="57dp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/notosanscjkr_regular"
        android:textColor="#000000"
        android:textSize="18dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:alpha="0.15"/>

<!--    계획하루에 4개 들어갈 수 있는크기-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_dialog_add_schedule_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="315dp"/>

    <ImageView
        android:id="@+id/home_custom_dialog_iv_plus_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_plus_button"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>