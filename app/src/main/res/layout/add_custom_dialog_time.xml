<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="133dp"
            android:layout_marginRight="93dp"
            android:text="시간"
            android:fontFamily="@font/notosanscjkr_regular"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/add_dialog_time_iv_close"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/add_dialog_time_fl_left"
            android:layout_width="142.5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/add_dialog_time_tv_left_blur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.3"
                android:textColor="#000000"
                android:fontFamily="@font/notosanscjkr_regular"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/add_dialog_time_tv_left_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:fontFamily="@font/notosanscjkr_regular"
                android:textSize="14dp"/>
        </FrameLayout>
        <View
            android:alpha="0.6"
            android:background="#000000"
            android:layout_width="12dp"
            android:layout_height="1dp"/>
        <FrameLayout
            android:id="@+id/add_dialog_time_fl_right"
            android:layout_width="142.5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/add_dialog_time_tv_right_blur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.3"
                android:textColor="#000000"
                android:fontFamily="@font/notosanscjkr_regular"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/add_dialog_time_ll_right_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:fontFamily="@font/notosanscjkr_regular"
                android:textSize="14dp"/>
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/add_dialog_time_fl_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/add_dialog_time_ll_start"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <NumberPicker
                android:id="@+id/add_dialog_time_np_start_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <NumberPicker
                android:id="@+id/add_dialog_time_np_start_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <NumberPicker
                android:id="@+id/add_dialog_time_np_start_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_dialog_time_ll_end"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <NumberPicker
                android:id="@+id/add_dialog_time_np_end_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <NumberPicker
                android:id="@+id/add_dialog_time_np_end_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <NumberPicker
                android:id="@+id/add_dialog_time_np_end_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>


    <Button
        android:id="@+id/add_time_dialog_btn_complete"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="28dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:fontFamily="@font/notosanscjkr_regular"
        android:text="완료"
        android:background="@drawable/login_custom_dialog_btn_border"
        android:layout_width="156dp"
        android:layout_height="32dp"/>

</LinearLayout>