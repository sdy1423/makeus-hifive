                        android:textColor="#707070"
                        android:textSize="14dp" />
                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:alpha="0.15"
                android:background="#000000" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/task_change_tv_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:alpha="0.8"
                    android:drawableLeft="@drawable/ic_alarm_24px"
                    android:drawablePadding="12dp"
                    android:text="알람"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/task_change_fl_alarm"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:id="@+id/task_change_fl_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:onClick="TaskChangeAlarmClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/task_change_tv_alarm"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/task_change_iv_alarm_add"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_add_24px" />

                    <ImageView
                        android:id="@+id/task_change_iv_alarm_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_remove_24px" />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/task_change_tv_alarm_what"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="46dp"
                android:fontFamily="@font/notosanscjkr_regular"
                android:textColor="#000000"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:alpha="0.15"
                android:background="#000000" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/task_change_tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:alpha="0.8"
                    android:drawableLeft="@drawable/ic_label_24px"
                    android:drawablePadding="12dp"
                    android:text="태그"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/task_change_fl_tag_add_remove"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:id="@+id/task_change_fl_tag_add_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:onClick="TaskChangeTagClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/task_change_tv_tag"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/task_change_iv_tag_add"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_add_24px" />

                    <ImageView
                        android:id="@+id/task_change_iv_tag_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_remove_24px" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/task_change_edt_tag"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="42dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_transparent"
                android:fontFamily="@font/notosanscjkr_regular"
                android:hint="태그입력"
                android:inputType="text"
                android:textColorHint="#66000000"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="14dp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
