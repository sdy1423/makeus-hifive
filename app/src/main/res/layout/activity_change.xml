<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56.5dp">
            <TextView
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/change_tv_save"
                android:text="회원 정보 수정"
                android:textSize="20dp"
                android:fontFamily="@font/notosanscjkr_regular"
                android:textColor="#0B0B0B"
                android:id="@+id/change_tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/change_tv_title"
                android:text="저장"
                android:textSize="16dp"
                android:fontFamily="@font/notosanscjkr_regular"
                android:textColor="#0B0B0B"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                android:id="@+id/change_tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.35"
            android:background="#707070" />

        <LinearLayout
            android:layout_marginTop="20.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/change_iv_profile_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/change_tv_change_profile_img"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:fontFamily="@font/notosanscjkr_regular"
                android:textSize="14dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:orientation="vertical">
            <TextView
                android:alpha="0.5"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12dp"
                android:text="E-mail"
                android:layout_marginTop="14.5dp"
                android:id="@+id/change_tv_email_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/change_tv_email"
                android:fontFamily="@font/roboto_regular"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="14.5dp"
                android:text="User Name"
                android:textColor="#000000"
                android:alpha="0.5"
                android:id="@+id/change_tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:textCursorDrawable="@drawable/cursor_color"
                android:textColorHint="#80000000"
                android:textSize="@dimen/user_info_edt_size"
                android:hint="@string/sign_up_edt_username"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                android:background="@drawable/login_signup_edt_border"
                android:id="@+id/change_edt_username"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginRight="16dp"
            android:id="@+id/change_tv_username_check_message"
            android:text="다른 유저 네임을 사용해주세요."
            android:textColor="#FF7979"
            android:gravity="end"
            android:fontFamily="@font/roboto_regular"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="14.5dp"
                android:text="Password"
                android:textColor="#000000"
                android:alpha="0.5"
                android:id="@+id/change_tv_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:textCursorDrawable="@drawable/cursor_color"
                android:hint="@string/sign_up_edt_pwd"
                android:textSize="@dimen/user_info_edt_size"
                android:textColorHint="#80000000"
                android:paddingLeft="12dp"
                android:inputType="textPassword"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                android:background="@drawable/login_signup_edt_border"
                android:id="@+id/change_edt_pwd"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="14.5dp"
                android:text="Password Check"
                android:textColor="#000000"
                android:alpha="0.5"
                android:id="@+id/change_tv_pwd_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:textCursorDrawable="@drawable/cursor_color"
                android:hint="@string/sign_up_edt_pwd_check"
                android:textSize="@dimen/user_info_edt_size"
                android:textColorHint="#80000000"
                android:paddingLeft="12dp"
                android:inputType="textPassword"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                android:background="@drawable/login_signup_edt_border"
                android:id="@+id/change_edt_pwd_check"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginRight="16dp"
            android:id="@+id/change_tv_pwd_check_message"
            android:text="비밀번호가 일치하지 않아요."
            android:textColor="#FF7979"
            android:gravity="end"
            android:fontFamily="@font/roboto_regular"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/change_btn_bye"
            android:stateListAnimator="@null"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="63dp"
            android:text="회원 탈퇴"
            android:fontFamily="@font/notosanscjkr_regular"
            android:textSize="16dp"
            android:textColor="#000000"
            android:background="@drawable/change_bye_border"
            android:layout_width="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_height="44dp"/>
    </LinearLayout>
</ScrollView>