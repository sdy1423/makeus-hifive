<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/main_vp_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_tl_tabs"/>

    <com.google.android.material.tabs.TabLayout
        app:tabIndicatorHeight="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_vp_view_pager"
        android:id="@+id/main_tl_tabs"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        app:tabBackground="@drawable/tab_color_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">



    </com.google.android.material.tabs.TabLayout>
