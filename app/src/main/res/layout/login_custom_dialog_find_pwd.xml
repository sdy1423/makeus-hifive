<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_custom_dialog_border"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="비밀번호 찾기"
                    android:textAlignment="center"
                    android:fontFamily="@font/notosanscjkr_regular"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/login_custom_dialog_iv_close"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_close_black_24dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanscjkr_regular"
                    android:text="가입하신 이메일을 입력해주세요.\n비밀번호를 전송해 드립니다."
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:layout_marginBottom="24dp"/>


                <EditText
                    android:id="@+id/login_custom_dialog_edt_email"
                    android:inputType="text|textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/login_custom_dialog_edt_border"
                    android:paddingLeft="12dp" />

                <TextView
                    android:id="@+id/find_pwd_tv_message"
                    android:text="해당 이메일로 가입된 계정이 없습니다."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textAlignment="center"
                    android:textColor="#FF7979"
                    android:textSize="12dp"
                    android:layout_marginBottom="24dp"/>

                <Button
                    android:id="@+id/login_custom_dialog_btn_transfer"
                    android:stateListAnimator="@null"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/login_custom_dialog_btn_border"
                    android:fontFamily="@font/notosanscjkr_regular"
                    android:text="전송하기"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1"
                android:background="#FFFFFF" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>