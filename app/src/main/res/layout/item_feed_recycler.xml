<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/item_feed_iv_color"
        android:layout_width="12dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="vertical">
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:fontFamily="@font/notosanscjkr_regular"
                android:textSize="18dp"
                android:gravity="bottom"
                android:id="@+id/item_feed_tv_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="bottom|right"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_feed_tv_num_of_chatting"
                    android:layout_marginBottom="1dp"
                    android:textSize="12dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/feed_recycler_num_of_people_border"
                    android:layout_marginRight="16dp"
                    android:textAlignment="center"
                    android:layout_width="24dp"
                    android:layout_height="18dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="#000000"
                    android:alpha="0.7"
                    android:textSize="14dp"
                    android:id="@+id/item_feed_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_feed_ll_people_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_feed_tv_num_of_people"
                    android:drawableLeft="@drawable/ic_people_outline_24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/item_feed_ll_profile_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

<!--                    TODO 프로필 이미지들-->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>