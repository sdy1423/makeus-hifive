<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.main.chatting.share.ShareActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="21dp"
        android:weightSum="360"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/share_iv_close"
            android:layout_weight="40"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAlignment="center"
            android:fontFamily="@font/notosanscjkr_regular"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_weight="273"
            android:text="일정공유"
            android:id="@+id/share_iv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_weight="47"
            android:id="@+id/share_fl_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/share_tv_complete_red"
                android:text="완료"
                android:textColor="#ff7979"
                android:fontFamily="@font/notosanscjkr_regular"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/share_tv_complete_black"
                android:text="완료"
                android:alpha="0.3"
                android:textColor="#000000"
                android:fontFamily="@font/notosanscjkr_regular"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </FrameLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/share_edt_search"
        android:textCursorDrawable="@drawable/cursor_color"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="4dp"
        android:background="@drawable/search_border"
        android:drawableLeft="@drawable/ic_search_blur_24dp"
        android:hint="Search"
        android:layout_marginBottom="12.5dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="135dp">
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/notosanscjkr_regular"
                android:textSize="12dp"
                android:textColor="#000000"
                android:paddingLeft="18dp"
                android:layout_weight="1"
                android:text="공유된 친구"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/notosanscjkr_regular"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textAlignment="viewEnd"
                android:paddingRight="16dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/share_recycler_picked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#707070"
        android:alpha="0.35"/>

    <TextView
        android:id="@+id/share_tv_recent_friend"
        android:layout_marginTop="20.5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="20dp"
        android:text="최근 공유 친구"
        android:alpha="0.8"
        android:textColor="#000000"
        android:textSize="12dp"
        android:fontFamily="@font/notosanscjkr_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/share_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>