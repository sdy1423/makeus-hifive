<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/feed_ll_schedules"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="12dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/feed_iv_color_1"
                android:background="@drawable/feed_recycler_border_item_one"
                android:layout_width="12dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/feed_iv_color_2"
                android:background="@drawable/feed_recycler_border_item_two"
                android:layout_width="12dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/feed_iv_color_3"
                android:background="@drawable/feed_recycler_border_item_three"
                android:layout_width="12dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/feed_iv_color_4"
                android:background="@drawable/feed_recycler_border_item_four"
                android:layout_width="12dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/feed_iv_color_5"
                android:background="@drawable/feed_recycler_border_item_five"
                android:layout_width="12dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/feed_iv_color_6"
                android:background="@drawable/feed_recycler_border_item_six"
                android:layout_width="12dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/feed_iv_color_7"
                android:background="@drawable/feed_recycler_border_item_seven"
                android:layout_width="12dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/feed_iv_color_8"
                android:background="@drawable/feed_recycler_border_item_eight"
                android:layout_width="12dp"
                android:layout_height="match_parent"/>

        </FrameLayout>
        <LinearLayout
            android:weightSum="86"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="38"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/feed_tv_title"
                    android:textSize="18dp"
                    android:fontFamily="@font/noto_sans_cjk_kr_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="48"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <TextView
                    android:alpha="0.7"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:fontFamily="@font/notosanscjkr_regular"
                    android:id="@+id/feed_tv_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>