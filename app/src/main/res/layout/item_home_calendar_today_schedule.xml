        <LinearLayout
            android:id="@+id/bottom_wrapper"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/delete_border"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:id="@+id/item_home_picked_schedule_iv_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete_outline_24px" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/top_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="12dp"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@drawable/feed_recycler_border_item_one"
                    android:id="@+id/item_home_picked_schedule_iv_color_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:background="@drawable/feed_recycler_border_item_two"
                    android:id="@+id/item_home_picked_schedule_iv_color_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:background="@drawable/feed_recycler_border_item_three"
                    android:id="@+id/item_home_picked_schedule_iv_color_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:background="@drawable/feed_recycler_border_item_four"
                    android:id="@+id/item_home_picked_schedule_iv_color_four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:background="@drawable/feed_recycler_border_item_five"
                    android:id="@+id/item_home_picked_schedule_iv_color_five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:background="@drawable/feed_recycler_border_item_six"
                    android:id="@+id/item_home_picked_schedule_iv_color_six"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:background="@drawable/feed_recycler_border_item_seven"
                    android:id="@+id/item_home_picked_schedule_iv_color_seven"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:background="@drawable/feed_recycler_border_item_eight"
                    android:id="@+id/item_home_picked_schedule_iv_color_eight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:background="@drawable/feed_recycler_border_item_white"
                    android:id="@+id/item_home_picked_schedule_iv_color_nine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <LinearLayout
                android:weightSum="2"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_home_picked_schedule_tv_title"
                    android:textAlignment="viewStart"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanscjkr_regular"
                    android:textSize="16dp"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/item_home_picked_schedule_iv_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_create_24px" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
