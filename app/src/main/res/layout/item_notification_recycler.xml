<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_width="16dp"
            android:layout_height="16dp">
            <ImageView
                android:id="@+id/notification_item_iv_color_1"
                android:background="@drawable/today_schedule_border_one"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/notification_item_iv_color_2"
                android:background="@drawable/today_schedule_border_two"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/notification_item_iv_color_3"
                android:background="@drawable/today_schedule_border_three"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/notification_item_iv_color_4"
                android:background="@drawable/today_schedule_border_four"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/notification_item_iv_color_5"
                android:background="@drawable/today_schedule_border_five"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/notification_item_iv_color_6"
                android:background="@drawable/today_schedule_border_six"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/notification_item_iv_color_7"
                android:background="@drawable/today_schedule_border_seven"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/notification_item_iv_color_8"
                android:background="@drawable/today_schedule_border_eight"
                android:layout_width="16dp"
                android:layout_height="16dp"/>

        </FrameLayout>
        <TextView
            android:id="@+id/notification_item_tv_title"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="아무말 아무말"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkr_regular"
            android:textSize="14dp"
            android:lineSpacingExtra="10sp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:id="@+id/notification_item_tv_day_time"
        android:includeFontPadding="false"
        android:lineSpacingExtra="8sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/notosanscjkr_regular"
        android:textSize="12dp"
        android:textColor="#000000"
        android:alpha="0.7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/notification_item_tv_message"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:fontFamily="@font/notosanscjkr_regular"
        android:textSize="12dp"/>
    <TextView
        android:text="캘린더에 추가되었습니다."
        android:id="@+id/notification_item_tv_message_message"
        android:includeFontPadding="false"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:lineSpacingExtra="6sp"
        android:fontFamily="@font/notosanscjkr_regular"
        android:textSize="12dp"/>
    </LinearLayout>


    <View
        android:layout_gravity="bottom"
        android:layout_marginLeft="15.5dp"
        android:layout_marginRight="15.5dp"
        android:background="#29000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


</LinearLayout>