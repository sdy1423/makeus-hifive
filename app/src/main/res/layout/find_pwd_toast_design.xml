<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="232dp"
    android:minHeight="134dp"
    android:id="@+id/find_pwd_toast_design_root"
    android:background="@drawable/login_custom_dialog_border"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_mail_outline_24px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="14dp"
        android:fontFamily="@font/notosanscjkr_regular"
        android:text="비밀번호를 전송하였습니다.\n이메일을 확인해주세요."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>