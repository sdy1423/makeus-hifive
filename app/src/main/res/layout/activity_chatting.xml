<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/chatting_drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.chatting.ChattingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:background="@color/chatting_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/chatting_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:paddingTop="137dp"
                    android:id="@+id/chatting_recycler"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/wrap_content_frame"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <FrameLayout
                    android:id="@+id/wrap_content_frame"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:layout_constraintTop_toBottomOf="@id/chatting_recycler"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <LinearLayout
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_gravity="center"
                        android:id="@+id/wrap_content"
                        app:layout_constraintTop_toBottomOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/chatting_edt_border"
                            android:id="@+id/chatting_edt_message"
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:inputType="text"
                            android:paddingLeft="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/chatting_iv_send"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <ImageView
                            android:layout_marginRight="16dp"
                            android:background="@drawable/chatting_iv_send_border"
                            android:src="@drawable/ic_arrow_right_alt_24px"
                            android:id="@+id/chatting_iv_send"
                            android:layout_width="40dp"
                            android:layout_height="32dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:background="@drawable/chatting_schedule_detail_border"
                android:elevation="10dp"
                android:id="@+id/chatting_ll_schedule_detail"
                android:layout_width="match_parent"
                android:layout_height="137dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56.5dp"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="12dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/chatting_iv_one"
                            android:background="@drawable/feed_recycler_border_item_one"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/chatting_iv_two"
                            android:background="@drawable/feed_recycler_border_item_two"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/chatting_iv_three"
                            android:background="@drawable/feed_recycler_border_item_three"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/chatting_iv_four"
                            android:background="@drawable/feed_recycler_border_item_four"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/chatting_iv_five"
                            android:background="@drawable/feed_recycler_border_item_five"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/chatting_iv_six"
                            android:background="@drawable/feed_recycler_border_item_six"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/chatting_iv_seven"
                            android:background="@drawable/feed_recycler_border_item_seven"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/chatting_iv_eight"
                            android:background="@drawable/feed_recycler_border_item_eight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/notosanscjkr_regular"
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:layout_weight="1"
                            android:id="@+id/chatting_tv_title"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/chatting_iv_share"
                                android:src="@drawable/ic_people_outline_24px"
                                android:layout_width="24dp"
                                android:layout_height="24dp"/>
                            <ImageView
                                android:id="@+id/chatting_iv_change"
                                android:src="@drawable/ic_create_24px"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:layout_marginLeft="24dp"/>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:alpha="0.35"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#707070"/>
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:paddingLeft="18dp"
                        android:id="@+id/chatting_tv_day"
                        android:drawableLeft="@drawable/ic_schedule_24px"
                        android:drawablePadding="10dp"
                        style="@style/ChattingScheduleDetail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/chatting_tv_time"
                        style="@style/ChattingScheduleDetail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:paddingLeft="18dp"
                    android:id="@+id/chatting_tv_location"
                    android:drawableLeft="@drawable/ic_place_black_18dp"
                    android:drawablePadding="10dp"
                    style="@style/ChattingScheduleDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>



    </LinearLayout>
    <include
        layout="@layout/main_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>




