<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.makeushifive">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".src.ApplicationClass"
        android:allowBackup="true"
        android:icon="@drawable/ic_hifive_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".src.main.setting.change.ChangeActivity"/>
        <activity android:name=".src.main.chatting.ChattingActivity" />
        <activity android:name=".src.main.home.search.SearchActivity" />
        <activity android:name=".src.main.home.add.AddActivity" />
        <activity android:name=".src.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".src.signup.SignupActivity" />
        <activity android:name=".src.login.LoginActivity" />
        <activity android:name=".src.main.MainActivity" />
    </application>

</manifest>